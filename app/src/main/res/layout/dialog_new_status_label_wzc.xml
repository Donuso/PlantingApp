<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="30dp"
    app:layout_constraintTop_toTopOf="parent"
    app:cardElevation="0dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/title_area"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="示例文本"
                android:textColor="@color/themeDarkGreen"
                android:textSize="22sp"
                android:id="@+id/label_title"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="13dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/status_choose_bar"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@id/title_area"
            app:layout_constraintBottom_toTopOf="@id/extra_area"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            >

            <com.google.android.material.card.MaterialCardView
                android:layout_height="45dp"
                android:layout_width="45dp"
                app:strokeColor="@color/themeDarkGreen"
                app:strokeWidth="1dp"
                app:cardCornerRadius="10dp"
                app:rippleColor="@color/cover_gray_wzc"
                app:cardBackgroundColor="@color/themeDarkGreen"
                android:id="@+id/status_1_bg"
                android:layout_marginEnd="15dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/status_1_wzc"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:id="@+id/status_1_text"
                    android:gravity="center"
                    android:textSize="16sp"
                    />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_height="45dp"
                android:layout_width="60dp"
                app:strokeColor="@color/status_2_wzc"
                app:strokeWidth="1dp"
                app:cardCornerRadius="10dp"
                app:rippleColor="@color/cover_gray_wzc"
                android:id="@+id/status_2_bg"
                android:layout_marginEnd="15dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/status_2_wzc"
                    android:textColor="@color/status_2_wzc"
                    android:id="@+id/status_2_text"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_height="45dp"
                android:layout_width="60dp"
                app:strokeColor="@color/status_3_wzc"
                app:strokeWidth="1dp"
                app:cardCornerRadius="10dp"
                app:rippleColor="@color/cover_gray_wzc"
                android:id="@+id/status_3_bg"
                android:layout_marginEnd="15dp"

                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/status_3_wzc"
                    android:textColor="@color/status_3_wzc"
                    android:id="@+id/status_3_text"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_height="45dp"
                android:layout_width="60dp"
                app:strokeColor="@color/status_4_wzc"
                app:strokeWidth="1dp"
                app:cardCornerRadius="10dp"
                app:rippleColor="@color/cover_gray_wzc"
                android:id="@+id/status_4_bg"
                android:layout_marginEnd="15dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/status_4_wzc"
                    android:textColor="@color/status_4_wzc"
                    android:id="@+id/status_4_text"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_height="45dp"
                android:layout_width="45dp"
                app:strokeColor="@color/status_5_wzc"
                app:strokeWidth="1dp"
                app:cardCornerRadius="10dp"
                app:rippleColor="@color/cover_gray_wzc"
                android:id="@+id/status_5_bg"
                android:layout_gravity="end"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/status_5_wzc"
                    android:textColor="@color/status_5_wzc"
                    android:id="@+id/status_5_text"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/status_choose_bar"
            app:layout_constraintBottom_toTopOf="@id/hint"
            android:id="@+id/extra_area">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:hint="@string/label_extra_input_wzc"
                android:id="@+id/extra_input"
                android:textColorHint="@color/general_grey_wzc"
                android:background="@android:color/transparent"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:maxLines="1"
                android:ems="20"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@color/line_grey_wzc"
                android:translationY="-8dp"
                />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hint_label_change_wzc"
            android:id="@+id/hint"
            app:layout_constraintTop_toBottomOf="@id/extra_area"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/button_area"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textSize="14sp"
            android:textColor="@color/themeDarkGreen"
            android:gravity="center"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            app:layout_constraintTop_toBottomOf="@id/hint"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            android:id="@+id/button_area">

            <TextView
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:text="@string/cancel_wzc"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:id="@+id/cancel"
                android:paddingBottom="5dp"/>

            <TextView
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:textColor="@color/themeDarkGreen"
                android:textSize="18sp"
                android:text="@string/make_sure_wzc"
                android:gravity="center"
                android:id="@+id/make_sure"
                android:paddingBottom="5dp"
                android:layout_marginStart="10dp"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

