<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ChangePasswordActivity">

    <!-- 标题栏 -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/back">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改密码"
            android:textAppearance="@style/ToolbarTitleStyle"
            android:layout_gravity="center" />
    </com.google.android.material.appbar.MaterialToolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp" />

        <!-- 输入原密码部分 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/old_password_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="输入原密码"
                    android:textColor="#008000"
                    android:textSize="25sp" />

                <EditText
                    android:id="@+id/old_password_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="在此输入原密码"
                    android:inputType="textPassword"
                    android:textSize="30sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 输入新密码部分 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/new_password_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="输入新密码"
                    android:textColor="#008000"
                    android:textSize="25sp" />

                <EditText
                    android:id="@+id/new_password_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="在此输入新密码"
                    android:inputType="textPassword"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/password_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*至少8位的字母与数字混合，不含特殊符号"
                    android:textColor="#008000"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC"
                    android:layout_marginTop="10dp" />
                <TextView
                    android:id="@+id/confirm_password_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="再次输入新密码"
                    android:textColor="#008000"
                    android:textSize="25sp"
                    android:layout_marginTop="8dp" />

                <EditText
                    android:id="@+id/confirm_password_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="在此再次输入新密码"
                    android:inputType="textPassword"
                    android:textSize="30sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- 确认按钮 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="60dp"
        app:cardElevation="2dp">

        <Button
            android:id="@+id/confirm_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="确认"
            android:background="@color/white"
            android:textColor="#008000"
            android:textStyle="bold"
            android:textSize="27sp"
            android:padding="16dp" />
    </androidx.cardview.widget.CardView>

</FrameLayout>