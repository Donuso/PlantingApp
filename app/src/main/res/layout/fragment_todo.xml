<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.TodoFragment"
    android:background="@drawable/bg_res_2"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待办"
                android:textSize="30sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:paddingBottom="16dp"/>
        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="搜索植物信息..."
            android:background="@drawable/edit_text_search_background"
            android:padding="8dp"
            android:layout_marginBottom="16dp"
            android:drawableStart="@drawable/searchs"
            android:drawablePadding="8dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="今日进度"
                    android:textSize="23sp"
                    android:textColor="#120F0F"
                    android:paddingBottom="8dp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未完成"
                    android:textColor="#000000"
                    android:paddingBottom="8dp"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="给[data]喷洒农药"
                    android:button="@drawable/round_checkbox"
                    android:layout_marginBottom="8dp"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="给[data]施肥"
                    android:button="@drawable/round_checkbox"
                    android:layout_marginBottom="8dp"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="给[data]灌溉"
                    android:button="@drawable/round_checkbox"
                    android:layout_marginTop="8dp"/>
                <!-- 分割线 -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#181616"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已完成"
                    android:textColor="#516B34"
                    android:paddingTop="16dp"
                    android:paddingBottom="8dp"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="喷洒农药"
                    android:checked="true"
                    android:button="@drawable/round_checkbox"
                    android:layout_marginBottom="8dp"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="给[data]喷洒农药"
                    android:checked="true"
                    android:button="@drawable/round_checkbox"
                    android:layout_marginBottom="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/buttonmanagealltodo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_spinner"
            android:drawableRight="@drawable/arrow_left"
            android:paddingRight="10dp"
            android:text="管理所有待办"
            android:textColor="#516B34" />

        <Button
            android:id="@+id/buttonnewtodo"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/xinzeng" />
    </LinearLayout>

</FrameLayout>