<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ModifyActivity">

    <!-- 标题栏 -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/back1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改个人信息"
            android:textAppearance="@style/ToolbarTitleStyle"
            android:layout_gravity="center" />
    </com.google.android.material.appbar.MaterialToolbar>

    <!-- 添加一条横线分割页面 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"/>

    <!-- 头像部分 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/avatar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="头像 | 点击修改"
                android:textColor="#008000"
                android:layout_marginBottom="20dp"
                android:textSize="25sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">
                <ImageView
                    android:id="@+id/avatar_image"
                    android:padding="45dp"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:scaleType="matrix"
                    android:background="#E0E0E0"
                    android:src="@drawable/picture" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 昵称部分 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/nickname_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称 | 点击修改"
                android:textColor="#008000"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/nickname_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="[原昵称]"
                android:inputType="text"
                android:textSize="20sp"
                android:layout_marginTop="16dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>