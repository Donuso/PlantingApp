<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/statusIndicator"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="2dp"
        app:cardCornerRadius="12dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/mass_text_grey_wzc"
        android:layout_gravity="start|center_vertical"
        app:cardElevation="0dp" />

    <ImageView
        android:id="@+id/checkIcon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_gravity="start|center_vertical"
        android:layout_marginStart="6dp"
        android:src="@drawable/icon_checkwhite_chl"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="37dp"
        android:layout_marginEnd="2dp"
        android:layout_gravity="center_vertical"
        >

        <TextView
            android:id="@+id/todoTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/mass_text_grey_wzc"
            android:text="这是一个测试版本"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/todo_log_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/iconGrey"
            android:text="这是一个测试的日志组名称"
            android:maxLines="1"
            android:ellipsize="end"
            android:visibility="visible"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/todo_touch_layer"/>

</FrameLayout>