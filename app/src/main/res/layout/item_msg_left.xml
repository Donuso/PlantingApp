<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minHeight="40dp"
    android:minWidth="40dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="20dp"
    >

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/bg_chat_left_chl"
        android:scaleType="fitXY"
        android:adjustViewBounds="false"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/finish_flag"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"
        android:src="@drawable/icon_finished_flag_chl"
        />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/loading_flag"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"
        android:src="@drawable/icon_loading_flag_chl"
        />

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/general_grey_wzc"
        android:id="@+id/dividing_line_2"
        app:layout_constraintStart_toEndOf="@id/finish_flag"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/response"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        />

    <ImageView
        android:layout_width="22dp"
        android:layout_height="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="3dp"
        android:src="@drawable/icon_ai_chat_decoration_chl"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/dividing_line_2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/response"
        android:padding="10dp"
        android:hint="@string/hint_ai_generating_chl"
        android:textColorHint="@color/text_grey_wzc"
        android:gravity="start"
        android:textSize="16sp"
        android:maxEms="15"
        android:textColor="@color/mass_text_grey_wzc"
        />

</androidx.constraintlayout.widget.ConstraintLayout>

