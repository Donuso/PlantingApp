<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 定义一个自定义样式 -->
    <style name="CustomSwitchCompat">
        <item name="android:thumbTint">@color/colorAccent</item>
        <item name="android:trackTint">@color/colorPrimary</item>
        <item name="android:trackTintMode">src_in</item>
        <item name="android:thumbTextPadding">8dp</item>

    </style>
    <!-- res/values/styles.xml -->

    <style name="ThemeOverlay.App.MaterialDatePicker" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <!-- 自定义颜色 -->
        <item name="colorPrimary">@color/themeDarkGreen</item> <!-- 选中日期或确认按钮颜色 -->
        <item name="colorOnPrimary">@color/white</item> <!-- 选中日期文字颜色 -->
        <item name="colorAccent">@color/themeDarkGreen</item> <!-- 强调色，可用于确认按钮等 -->
    </style>

    <style name="CustomDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="ImagePickerTheme" parent="ef_BaseTheme">
        <item name="colorPrimary">@color/themeLightGreen</item>
        <item name="colorPrimaryDark">@color/themeDarkGreen</item>
        <item name="colorAccent">@color/themeBlue</item>
    </style>

</resources>