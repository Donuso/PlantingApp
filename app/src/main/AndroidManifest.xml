<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.plantingapp"> <!-- 建议添加 package 属性 -->

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- 移除重复声明的 WRITE_EXTERNAL_STORAGE 权限，因为已经在后续逻辑中处理存储权限 -->
    <!-- <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> -->
    <!-- 对于 Android 12L 及以下，保留此声明并设置 maxSdkVersion -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="32" />
    <!-- 对于 Android 13 及以上，声明新的媒体权限 -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES"
        tools:targetApi="33" />
    <uses-permission android:name="android.permission.READ_MEDIA_VIDEO"
        tools:targetApi="33" />
    <!-- 对于 Android 14 及以上，声明新的选择性媒体权限 -->
    <uses-permission android:name="android.permission.READ_MEDIA_VISUAL_USER_SELECTED"
        tools:targetApi="34" />

    <!-- 声明外部存储读写特性 -->
    <uses-feature android:name="android.hardware.storage.external" android:required="true" />
    <!-- 可选的额外声明，表示应用可能使用外部存储设备 -->
    <uses-feature android:name="android.hardware.storage" android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        tools:targetApi="31"
        android:theme="@style/AppTheme">
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths"/>
        </provider>
        <activity
            android:name=".NewPersonalLabelActivity"
            android:exported="true"></activity>
        <activity
            android:name=".ChangePasswordActivity"
            android:exported="true"></activity>
        <activity
            android:name=".ModifyActivity"
            android:exported="true"></activity>
        <activity
            android:name=".AIChatActivity"
            android:exported="true"></activity>
        <activity
            android:name=".NewLabelActivity"
            android:exported="true"></activity>
        <activity
            android:name=".LogDataAnalyzeActivity"
            android:exported="true"></activity>
        <activity
            android:name=".DatePickerActivity"
            android:exported="true"></activity>
        <activity
            android:name=".LogActivity"
            android:exported="true"></activity>
        <activity
            android:name=".RegisterActivity"
            android:exported="true"></activity>
        <activity
            android:name=".LoginActivity"
            android:exported="true"></activity>
        <activity
            android:name=".SplashActivity"
            android:exported="true"></activity>
        <activity
            android:name=".LogSearchActivity"
            android:exported="true"></activity>
        <activity
            android:name=".AllToDoActivity"
            android:exported="true"></activity>
        <activity
            android:name=".NewTodoActivity"
            android:exported="true"></activity>
        <activity
            android:name=".MainSwitchActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>